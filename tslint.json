{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "forin": true,
    "no-conditional-assignment": true,
    "label-position": true,
    "no-var-requires": true,
    "no-var-keyword": true,
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-invalid-this": [
      true,
      "check-function-in-method"
    ],
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "switch-default": true,
    "radix": true,
    "use-isnan": true,
    "no-bitwise": true,
    "no-empty": true,
    "no-unused-expression": true,
    "no-unused-variable": [
      true
    ],
    "indent": [
      true,
      "spaces"
    ],
    "no-trailing-whitespace": true,
    "eofline": true,
    "class-name": true,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-trailing-underscore"
    ],
    "directive-selector": [
      true,
      "attribute",
      [],
      "camelCase"
    ],
    "directive-class-suffix": [
      true,
      "Directive"
    ],
    "component-selector": [
      true,
      "element",
      [],
      "kebab-case"
    ],
    "component-class-suffix": [
      true,
      "Component"
    ],
    "pipe-naming": [
      true,
      "camelCase"
    ],
    "use-pipe-transform-interface": true,
    "use-life-cycle-interface": true,
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-forward-ref": true,
    "invoke-injectable": true,
    "templates-use-public": true,
    "curly": true,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast"
    ],
    "comment-format": [
      true,
      "check-space"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "space",
        "index-signature": "space",
        "parameter": "space",
        "property-declaration": "space",
        "variable-declaration": "space"
      }
    ],
    "array-type": [
      true,
      "array"
    ],
    "import-destructuring-spacing": true
  }
}
